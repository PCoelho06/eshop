{% extends 'base.html.twig' %}
{% block title %}Mes Commandes - Ma boutique
{% endblock %}
{% block content %}
	<h1>Mes Commandes</h1>
	<p>Dans cet espace , vous pouvez voir toutes vos commandes</p>
	<a href="{{path('app_account')}}">Retour</a>
	<hr>
	{% if orders | length == 0 %}
		<p class="text-center">Vous n'avez pas encore passé de commandes</p>
	{% else %}
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Référence</th>
					<th scope="col">Passée le</th>
					<th scope="col">Nombre Produit(s)</th>
					<th scope="col">Total</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for order in orders %}
					<tr>
						<th scope="row">
							<span class="badge bg-secondary">{{order.reference}}</span>
						</th>
						<td>{{order.createdAt|date("d/m/Y")}}</td>
						<td>{{order.orderDetails | length}}</td>
						<td>{{((order.carrier.price + order.total)/100) | number_format(2)}}
							€</td>
						<td>
							<a href="{{path('app_account_order_show',{'reference':order.reference})}}">Voir ma commande</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}
{% endblock %}
